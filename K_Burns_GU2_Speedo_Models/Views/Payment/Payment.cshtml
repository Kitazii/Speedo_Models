@model K_Burns_GU2_Speedo_Models.Models.Order

@{
    ViewBag.Title = "Payment";
}

<link href="~/Content/Payment.css" rel="stylesheet" />

<!--Displays the payment cards at the top of the page-->
<div class="container">
    <div class="row">
        <div class="col-lg-4 mb-lg-0 mb-3">
            <div class="card p-3">
                <div class="img-box">
                    <img src="https://www.freepnglogos.com/uploads/visa-logo-download-png-21.png" alt="">
                </div>
                <div class="number">
                    <label class="fw-bold" for="">**** **** **** 1060</label>
                </div>
                <div class="d-flex align-items-center justify-content-between">
                    <small><span class="fw-bold">Expiry date:</span><span>10/30</span></small>
                    <small><span class="fw-bold">Name: </span><span>@Model.User.Forename</span></small>
                </div>
            </div>
        </div>
        <div class="col-lg-4 mb-lg-0 mb-3">
            <div class="card p-3">
                <div class="img-box">
                    <img src="https://www.freepnglogos.com/uploads/mastercard-png/file-mastercard-logo-svg-wikimedia-commons-4.png"
                         alt="">
                </div>
                <div class="number">
                    <label class="fw-bold">**** **** **** 1060</label>
                </div>
                <div class="d-flex align-items-center justify-content-between">
                    <small><span class="fw-bold">Expiry date:</span><span>10/30</span></small>
                    <small><span class="fw-bold">Name: </span><span>@Model.User.Forename</span></small>
                </div>
            </div>
        </div>
        <div class="col-lg-4 mb-lg-0 mb-3">
            <div class="card p-3">
                <div class="img-box">
                    <img src="https://logosmarcas.net/wp-content/uploads/2020/11/American-Express-Emblema.png"
                         alt="">
                </div>
                <div class="number">
                    <label class="fw-bold">**** **** **** 1060</label>
                </div>
                <div class="d-flex align-items-center justify-content-between">
                    <small><span class="fw-bold">Expiry date:</span><span>10/30</span></small>
                    <small><span class="fw-bold">Name: </span><span>@Model.User.Forename</span></small>
                </div>
            </div>
        </div>
        <div class="col-12 mt-4">
            <div class="card p-3">
                <p class="mb-0 fw-bold h4">Payment Methods</p>
            </div>
        </div>

        <!--Deals with the Payemnt form submission-->
        @using (Html.BeginForm("Payment", "Payment", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.OrderId)
            @Html.HiddenFor(model => model.OrderDate)
            @Html.HiddenFor(model => model.DeliveryDate)
            @Html.HiddenFor(model => model.OrderTotal)
            @Html.HiddenFor(model => model.Status)
            @Html.HiddenFor(model => model.Payment)
            @Html.HiddenFor(model => model.ShippingInfo)
            @Html.HiddenFor(model => model.OrderLines)
            @Html.HiddenFor(model => model.Payment)
            <div class="col-12">
                <div class="card p-3">
                    <div class="card-body border p-0">
                        <p>
                            <a class="btn btn-primary w-100 h-100 d-flex align-items-center justify-content-between"
                               data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="true"
                               aria-controls="collapseExample">
                                <span class="fw-bold">Stripe</span>
                            </a>
                        </p>
                        <div class="collapse show p-3 pt-0" id="collapseExample">
                            <div class="row">
                                <div class="col-8">
                                    <p class="h4 mb-0">Summary</p>
                                    <p class="mb-0">
                                        <span class="fw-bold">Product:</span><span class="c-green"> @Model.OrderSize Items</span>
                                    </p>
                                    <p class="mb-0">
                                        <span class="fw-bold">Price:</span><span class="c-green"> £@Model.TotalAmount</span>
                                    </p>
                                    <p class="mb-0">
                                        Lorem ipsum, dolor sit amet consectetur adipisicing elit. Atque
                                        nihil neque
                                        quisquam aut
                                        repellendus, dicta vero? Animi dicta cupiditate, facilis provident quibusdam ab
                                        quis,
                                        iste harum ipsum hic, nemo qui!
                                    </p>

                                </div>
                                <div class="d-flex justify-content-center">
                                    <button class="btn btn-primary" style="background-color:rebeccapurple; height:50px;" name="PaymentType" value="byStripe" type="submit"><p class="text-white">STRIPE PAYMENT</p></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>